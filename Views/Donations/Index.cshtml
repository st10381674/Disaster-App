@model IEnumerable<WebApplication8.Models.Donation>

@{
    ViewData["Title"] = "Index";
}
<style>
    /* ===== DONATIONS PAGE HEADER ===== */
    .index-header h1 {
        color: #004c99;
        font-weight: 700;
        font-size: 2.5rem;
        text-align: center;
        margin-bottom: 15px;
        letter-spacing: 1px;
    }

    .index-header p {
        text-align: center;
        font-size: 1.1rem;
        color: #333;
        margin-bottom: 25px;
    }

        .index-header p a {
            display: inline-block;
            background-color: #004c99;
            color: #fff;
            padding: 10px 25px;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .index-header p a:hover {
                background-color: #003366;
            }

</style>

<div class="index-header">
    <h1>Donation Records</h1>
    <p>
        <a asp-action="Create">Add a New Donation</a>
    </p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DonorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DonationType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateDonated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DonorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonationType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateDonated)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


