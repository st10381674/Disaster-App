@model WebApplication8.Models.Donation

@{
    ViewData["Title"] = "Create";
}
<style>
    /* ===== CREATE DONATION FORM ===== */
    .form-header h1 {
        text-align: center;
        color: #004c99;
        font-weight: 700;
        font-size: 2.2rem;
        margin-bottom: 5px;
    }

    .form-header h4 {
        text-align: center;
        color: #555;
        font-weight: 500;
        margin-bottom: 20px;
    }

    .form-header hr {
        border: 1px solid #004c99;
        width: 60px;
        margin: 0 auto 30px auto;
    }

    .form-control::placeholder {
        color: #999;
        font-style: italic;
    }

    .btn-primary {
        width: 100%;
        background-color: #004c99;
        border: none;
        padding: 10px;
        font-weight: 600;
        border-radius: 8px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #003366;
        }

    .back-link {
        display: inline-block;
        margin-top: 20px;
        text-decoration: none;
        color: #004c99;
        font-weight: 600;
        transition: color 0.3s ease;
    }

        .back-link:hover {
            color: #002e66;
        }

</style>

<div class="form-header">
    <h1>Add a New Donation</h1>
    <h4>Fill in the donation details below</h4>
    <hr />
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="DonorName" class="control-label"></label>
                <input asp-for="DonorName" class="form-control" placeholder="Enter donor's full name" />
                <span asp-validation-for="DonorName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DonationType" class="control-label"></label>
                <input asp-for="DonationType" class="form-control" placeholder="Enter type of donation (e.g., clothes, food)" />
                <span asp-validation-for="DonationType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" placeholder="Enter quantity" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateDonated" class="control-label"></label>
                <input asp-for="DateDonated" class="form-control" placeholder="Select donation date" />
                <span asp-validation-for="DateDonated" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Submit Donation" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="back-link">Back to Donation Records</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
