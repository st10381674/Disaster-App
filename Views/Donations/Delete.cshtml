@model WebApplication8.Models.Donation

@{
    ViewData["Title"] = "Delete";
}

<style>
    /* ===== DELETE DONATION FORM ===== */
    .form-header h1 {
        text-align: center;
        color: #cc0000; /* red for delete action */
        font-weight: 700;
        font-size: 2.2rem;
        margin-bottom: 5px;
    }

    .form-header h4 {
        text-align: center;
        color: #555;
        font-weight: 500;
        margin-bottom: 20px;
    }

    .form-header hr {
        border: 1px solid #cc0000;
        width: 60px;
        margin: 0 auto 30px auto;
    }

    .details-container h4 {
        text-align: center;
        color: #004c99;
        font-weight: 600;
        margin-bottom: 15px;
    }

    .details-container dl {
        background: #ffffff;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }

    .btn-danger {
        width: 150px;
        padding: 10px;
        font-weight: 600;
        border-radius: 8px;
        transition: background-color 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #990000;
        }

    .back-link {
        display: inline-block;
        margin-left: 15px;
        text-decoration: none;
        color: #004c99;
        font-weight: 600;
        transition: color 0.3s ease;
    }

        .back-link:hover {
            color: #002e66;
        }

</style>
<div class="form-header">
    <h1>Remove Donation</h1>
    <h4>Are you sure you want to remove this donation record?</h4>
    <hr />
</div>

<div class="details-container">
    <h4>Donation Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DonorName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DonorName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DonationType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DonationType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateDonated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateDonated)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="back-link">Back to Donation Records</a>
    </form>
</div>

