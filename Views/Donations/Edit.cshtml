@model WebApplication8.Models.Donation

@{
    ViewData["Title"] = "Edit";
}

<style>
    /* ===== EDIT DONATION PAGE ===== */
    .form-header h1 {
        text-align: center;
        color: #004c99;
        font-weight: 700;
        font-size: 2.2rem;
        margin-bottom: 5px;
    }

    .form-header h4 {
        text-align: center;
        color: #555;
        font-weight: 500;
        margin-bottom: 20px;
    }

    .form-header hr {
        border: 1px solid #004c99;
        width: 60px;
        margin: 0 auto 30px auto;
    }

    .form-container {
        max-width: 600px;
        margin: 0 auto 30px auto;
        background: #ffffff;
        padding: 35px;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    }

        .form-container .form-control {
            width: 100%;
            padding: 10px;
            border-radius: 8px;
            border: 1px solid #ccc;
            margin-bottom: 15px;
        }

        .form-container .btn-primary {
            width: 100%;
            padding: 10px;
            font-weight: 600;
            border-radius: 8px;
            background-color: #004c99;
            border: none;
            transition: background-color 0.3s ease;
        }

            .form-container .btn-primary:hover {
                background-color: #003366;
            }

    .action-links {
        text-align: center;
        margin-top: 20px;
    }

    .back-link {
        text-decoration: none;
        color: #004c99;
        font-weight: 600;
        transition: color 0.3s ease;
    }

        .back-link:hover {
            color: #002e66;
        }

</style>
<div class="form-header">
    <h1>Edit Donation</h1>
    <h4>Update the donation information below</h4>
    <hr />
</div>

<div class="form-container">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="DonorName" class="control-label"></label>
            <input asp-for="DonorName" class="form-control" />
            <span asp-validation-for="DonorName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DonationType" class="control-label"></label>
            <input asp-for="DonationType" class="form-control" />
            <span asp-validation-for="DonationType" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Quantity" class="control-label"></label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DateDonated" class="control-label"></label>
            <input asp-for="DateDonated" class="form-control" />
            <span asp-validation-for="DateDonated" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Save Changes" class="btn btn-primary" />
        </div>
    </form>
</div>

<div class="action-links">
    <a asp-action="Index" class="back-link">Back to Donations</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

