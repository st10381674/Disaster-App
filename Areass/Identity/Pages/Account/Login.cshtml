@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    /* ===== LOGIN PAGE STYLES ===== */
.login-container {
    max-width: 950px;
    margin: 60px auto;
    background: #ffffff;
    padding: 40px 50px;
    border-radius: 16px;
    box-shadow: 0 6px 25px rgba(0, 0, 0, 0.08);
}

.login-title {
    text-align: center;
    color: #004c99;
    font-weight: 700;
    font-size: 2rem;
    margin-bottom: 10px;
}

.login-subtitle {
    text-align: center;
    color: #666;
    font-size: 1.1rem;
    margin-bottom: 35px;
}

.login-section h2.form-heading {
    color: #004c99;
    font-weight: 600;
    font-size: 1.3rem;
    margin-bottom: 15px;
}

.login-form .form-control {
    border-radius: 10px;
    padding: 12px 15px;
    font-size: 1rem;
}

.login-form label {
    font-weight: 500;
}

.checkbox {
    display: flex;
    align-items: center;
    gap: 8px;
}

.btn-primary {
    background-color: #004c99;
    border: none;
    padding: 10px 0;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    transition: background-color 0.3s ease;
}

.btn-primary:hover {
    background-color: #003366;
}

.login-links p {
    margin: 5px 0;
    text-align: center;
}

.login-links a {
    color: #004c99;
    font-weight: 500;
    text-decoration: none;
}

.login-links a:hover {
    text-decoration: underline;
}

.external-login-section h3 {
    color: #004c99;
    font-weight: 600;
}

.external-buttons {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.external-buttons .btn-outline-primary {
    border-color: #004c99;
    color: #004c99;
    border-radius: 8px;
    font-weight: 600;
    padding: 10px 0;
    transition: all 0.3s ease;
}

.external-buttons .btn-outline-primary:hover {
    background-color: #004c99;
    color: #fff;
}
</style>

<div class="login-container">
    <h1 class="login-title">@ViewData["Title"]</h1>
    <p class="login-subtitle">Welcome back! Please log in to continue to your dashboard.</p>

    <div class="row">
        <div class="col-md-5">
            <section class="login-section">
                <form id="account" method="post" class="login-form">
                    <h2 class="form-heading">Sign in with your account</h2>
                    <hr />

                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email Address</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="••••••••" type="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            Remember Me
                        </label>
                    </div>

                    <button id="login-submit" type="submit" class="btn btn-primary w-100">Log In</button>

                    <div class="login-links mt-3">
                        <p><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></p>
                        <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create a new account</a></p>
                        <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend confirmation email</a></p>
                    </div>
                </form>
            </section>
        </div>

        <div class="col-md-6 offset-md-1">
            <section class="external-login-section">
                <h3>Or log in with another service</h3>
                <hr />

                @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <p>
                        No external authentication services are configured.
                        Learn how to add them <a href="https://go.microsoft.com/fwlink/?LinkID=532715">here</a>.
                    </p>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div class="external-buttons">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-outline-primary" name="provider" value="@provider.Name">
                                    Log in with @provider.DisplayName
                                </button>
                            }
                        </div>
                    </form>
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
