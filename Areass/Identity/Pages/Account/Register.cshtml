@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@{
    ViewData["Title"] = "Create Account";
}

<style>
    /* REGISTER PAGE STYLING */
    .register-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        flex-wrap: wrap;
        gap: 40px;
        padding: 50px 20px;
        background: #f4f8ff;
        min-height: 100vh;
    }

    .register-box {
        background: #ffffff;
        padding: 40px;
        border-radius: 16px;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.08);
        width: 100%;
        max-width: 450px;
        transition: transform 0.3s ease;
    }

        .register-box:hover {
            transform: translateY(-5px);
        }

        .register-box h1 {
            font-size: 2rem;
            color: #004aad;
            margin-bottom: 10px;
        }

    .register-subtitle {
        color: #666;
        font-size: 1rem;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 10px;
        border: 1px solid #d6d6d6;
        padding: 10px 14px;
        width: 100%;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 4px rgba(0, 123, 255, 0.25);
        }

    .btn-primary {
        background-color: #004aad;
        border: none;
        padding: 12px;
        border-radius: 10px;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0066ff;
        }

    .register-side {
        background: #ffffff;
        padding: 40px;
        border-radius: 16px;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.08);
        max-width: 400px;
        width: 100%;
    }

        .register-side h2 {
            color: #004aad;
            font-size: 1.5rem;
            margin-bottom: 15px;
        }

    .no-service {
        color: #666;
        line-height: 1.6;
    }

    .external-logins button {
        display: block;
        width: 100%;
        margin-bottom: 10px;
        border-radius: 8px;
    }

    .btn-outline-primary {
        background-color: transparent;
        border: 2px solid #004aad;
        color: #004aad;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn-outline-primary:hover {
            background-color: #004aad;
            color: #fff;
        }

</style>

<div class="register-container">
    <div class="register-box">
        <h1>Create Your Account</h1>
        <p class="register-subtitle">Join us today â€” it only takes a moment.</p>
        <hr />

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-group">
                <label asp-for="Input.Email" class="control-label">Email Address</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="you@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password" class="control-label">Password</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Enter your password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="control-label">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Re-enter your password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="btn btn-primary w-100">Create Account</button>
        </form>
    </div>

    <div class="register-side">
        <h2>Register with Another Service</h2>
        <hr />
        @{
            if ((Model.ExternalLogins?.Count ?? 0) == 0)
            {
                <p class="no-service">
                    No external login options are currently available.<br />
                    Learn more about enabling external login services
                    <a href="https://go.microsoft.com/fwlink/?LinkID=532715">here</a>.
                </p>
            }
            else
            {
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="external-logins">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-primary" name="provider" value="@provider.Name">
                                Register with @provider.DisplayName
                            </button>
                        }
                    </div>
                </form>
            }
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

